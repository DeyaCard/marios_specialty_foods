<div class="title-container">
  <h1>Products</h1>
  <%= link_to "Add new product", new_product_path, class: "btn btn-default" %>
</div>  

<div class="products">
  <% if @products.any? %>
    <ul>
      <% @products.each do |product| %>
        <li><%= link_to product.name, product_path(product) %></li>
      <% end %>
      </div>
    <p><%= link_to "Return to main menu", "/" %></p>
  <% end %>
</div>
          

            

 


